<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hundsun.jerry">

    <!-- 添加摄像头的访问权限 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 添加SD卡的读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 添加网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:alwaysRetainTaskState="true"  不重复启动APP -->
        <activity
            android:name=".activity.CityPosterActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.OperatorActivity"
            android:label="@string/title_activity_operator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CityPoster2Activity" />
        <activity android:name=".activity.PerInfoSetActivity" />
        <activity android:name=".activity.perinfosetdetails.UNameSetActivity" />
        <activity android:name=".activity.perinfosetdetails.UTelSetActivity" />
        <activity android:name=".activity.perinfosetdetails.UTruenameSetActivity" />
        <activity android:name=".activity.perinfosetdetails.UQQSetActivity" />
        <activity android:name=".activity.perinfosetdetails.UMailSetActivity" />
    </application>

</manifest>